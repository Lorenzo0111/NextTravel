{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "DATABASE_URL",
    "JWT_SECRET",
    "OPENAI_API_KEY",
    "OPENAI_API_URL",
    "EXPO_USE_METRO_WORKSPACE_ROOT",
    "EXPO_PUBLIC_API_URL"
  ],
  "ui": "tui",

  "tasks": {
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".expo/**", ".output/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
